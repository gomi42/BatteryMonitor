<Window x:Class="BatteryMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BatteryMonitor"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:BatteryMonitor.Properties"
        Title="{x:Static p:Resources.WindowTitle}"
        Width="359"
        Height="361"
        MinWidth="310"
        MinHeight="361"
        Background="{DynamicResource WindowBackgroundBrush}"
        SnapsToDevicePixels="True"
        mc:Ignorable="d">
    <Window.Resources />
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,11"
                        Grid.IsSharedSizeScope="True">
                <Expander Margin="20,10,20,10"
                          Padding="5">
                    <Expander.Header>
                        <Grid>
                            <Label Margin="7,0,30,0"
                                   HorizontalAlignment="Left"
                                   Content="{x:Static p:Resources.HeaderSystem}"
                                   FontWeight="Normal" FontSize="15" />

                            <StackPanel Margin="80,0,0,0"
                                        Orientation="Horizontal"
                                        TextElement.FontSize="22">
                                <Label x:Name="SystemCapacity"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Content="42" />
                                <Label Grid.Row="0"
                                       Grid.Column="1"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Content="%" />
                            </StackPanel>

                            <Grid Width="Auto"
                                  Margin="30,40,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"
                                                      SharedSizeGroup="columnGroup" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Label Grid.Column="0"
                                       Content="{x:Static p:Resources.LabelRemainingTime}"
                                       Style="{DynamicResource DescriptionStyle}" />
                                <Label x:Name="RemainingSystemTime"
                                       Grid.Column="1"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Content="03:04:05" />
                            </Grid>
                        </Grid>
                    </Expander.Header>
                    <Grid Width="Auto"
                          Margin="30,5,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="columnGroup" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelChargeState}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <Label x:Name="SystemPowerState"
                               Grid.Row="0"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="--" />

                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelPowerLineStatus}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <Label x:Name="SystemPowerLineStatus"
                               Grid.Row="1"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="--" />
                    </Grid>
                </Expander>

                <Expander Margin="20,10,20,10">
                    <Expander.Header>
                        <Grid>
                            <Label Margin="7,0,30,0"
                                   HorizontalAlignment="Left"
                                   Content="{x:Static p:Resources.HeaderBattery}"
                                    FontWeight="Normal" FontSize="15" />
                            <StackPanel Margin="80,0,0,0"   TextElement.FontSize="22"
                                            Orientation="Horizontal">
                                <Label x:Name="CurrentCapacityPercent"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="43" />
                                <Label HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="%" />
                            </StackPanel>

                            <Grid Width="Auto"
                                  Margin="30,40,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"
                                                      SharedSizeGroup="columnGroup" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>


                                <Label Grid.Row="1"
                                       Grid.Column="0"
                                       Content="{x:Static p:Resources.LabelRemainingTime}"
                                       Style="{DynamicResource DescriptionStyle}" />
                                <Label x:Name="EstimatedTime"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Content="--" />

                                <Label Grid.Row="2"
                                       Grid.Column="0"
                                       Content="{x:Static p:Resources.LabelDesignCapacity}"
                                       Style="{DynamicResource DescriptionStyle}" />
                                <StackPanel Grid.Row="2"
                                            Grid.Column="1"
                                            Orientation="Horizontal">
                                    <Label x:Name="DesignedCapacity"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="--" />
                                    <Label HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content=" mWh" />
                                </StackPanel>

                                <Label Grid.Row="3"
                                       Grid.Column="0"
                                       Content="{x:Static p:Resources.LabelFullChargedCapacity}"
                                       Style="{DynamicResource DescriptionStyle}" />
                                <StackPanel Grid.Row="3"
                                            Grid.Column="1"
                                            Orientation="Horizontal">
                                    <Label x:Name="FullChargeCapacity"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="--" />
                                    <Label HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content=" mWh" />
                                </StackPanel>

                                <Label Grid.Row="4"
                                       Grid.Column="0"
                                       Content="{x:Static p:Resources.LabelCurrentCapacity}"
                                       Style="{DynamicResource DescriptionStyle}" />
                                <StackPanel Grid.Row="4"
                                            Grid.Column="1"
                                            Orientation="Horizontal">
                                    <Label x:Name="CurrentCapacity"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="--" />
                                    <Label HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content=" mWh" />
                                </StackPanel>

                                <Label Grid.Row="5"
                                       Grid.Column="0"
                                       Content="{x:Static p:Resources.LabelVoltage}"
                                       Style="{DynamicResource DescriptionStyle}" />
                                <StackPanel Grid.Row="5"
                                            Grid.Column="1"
                                            Orientation="Horizontal">
                                    <Label x:Name="Voltage"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="--" />
                                    <Label HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content=" V" />
                                </StackPanel>

                                <Label Grid.Row="6"
                                       Grid.Column="0"
                                       Content="{x:Static p:Resources.LabelPowerState}"
                                       Style="{DynamicResource DescriptionStyle}" />
                                <Label x:Name="PowerState"
                                       Grid.Row="6"
                                       Grid.Column="1"
                                       Content="--"
                                       Style="{DynamicResource ValueStyle}" />

                                <Label Grid.Row="7"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelRate}"
                               Style="{DynamicResource DescriptionStyle}" />
                                <StackPanel Grid.Row="7"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                                    <Label x:Name="Rate"
                                   HorizontalAlignment="Left"
                                   Content="--" />
                                    <Label HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content=" mW" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Expander.Header>
                    <Grid Width="Auto"
                          Margin="30,5,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="columnGroup" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelBatteryName}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <Label x:Name="DeviceName"
                               Grid.Row="0"
                               Grid.Column="1"
                               Content="--"
                               Style="{DynamicResource ValueStyle}" />

                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelManufacturer}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <Label x:Name="Manufacture"
                               Grid.Row="1"
                               Grid.Column="1"
                               Content="--"
                               Style="{DynamicResource ValueStyle}" />

                        <Label Grid.Row="2"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelManufactureDate}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <Label x:Name="ManufactureDate"
                               Grid.Row="2"
                               Grid.Column="1"
                               Content="--"
                               Style="{DynamicResource ValueStyle}" />

                        <Label Grid.Row="3"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelChemistry}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <Label x:Name="Chemistry"
                               Grid.Row="3"
                               Grid.Column="1"
                               Content="--"
                               Style="{DynamicResource ValueStyle}" />

                        <Label Grid.Row="4"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelDefaultAlert1}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <StackPanel Grid.Row="4"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                            <Label x:Name="DefaultAlert1"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="--" />
                            <Label HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content=" mWh" />
                        </StackPanel>
                        <Label Grid.Row="5"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelDefaultAlert2}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <StackPanel Grid.Row="5"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                            <Label x:Name="DefaultAlert2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="--" />
                            <Label HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content=" mWh" />
                        </StackPanel>
                        <Label Grid.Row="6"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelCriticalBias}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <StackPanel Grid.Row="6"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                            <Label x:Name="CriticalBias"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="--" />
                            <Label HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content=" mWh" />
                        </StackPanel>

                        <Label Grid.Row="7"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelCycleCount}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <Label x:Name="CylceCount"
                               Grid.Row="7"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="--" />
                        <Label Grid.Row="8"
                               Grid.Column="0"
                               Content="{x:Static p:Resources.LabelTemperature}"
                               Style="{DynamicResource DescriptionStyle}" />
                        <StackPanel Grid.Row="8"
                                    Grid.Column="1"
                                    Orientation="Horizontal">
                            <Label x:Name="Temperature"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="--" />
                            <Label HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="°" />
                        </StackPanel>

                        <Label Grid.Row="9"
                                       Grid.Column="0"
                                       Content="{x:Static p:Resources.LabelBatteryHealth}"
                                       Style="{DynamicResource DescriptionStyle}" />
                        <StackPanel Grid.Row="9"
                                            Grid.Column="1"
                                            Orientation="Horizontal">
                            <Label x:Name="BatteryHealth"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="--" />
                            <Label HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="%" />
                        </StackPanel>
                    </Grid>
                </Expander>

                <StackPanel Margin="21,40,0,0"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                    <Button Width="85"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Button_Click_Test1"
                            Content="1" />
                    <Button Width="85"
                            Margin="12,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Button_Click_Test2"
                            Content="2" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="ThemeBtn"
                Width="22"
                Height="22"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                BorderThickness="0"
                Click="ThemeButton_Click"
                Style="{DynamicResource TransparentButtonStyle}">
            <Grid>
                <Path x:Name="Sonne"
                      Margin="4"
                      Data="{StaticResource LightThemeIcon}"
                      Fill="{DynamicResource ForegroundBrush}"
                      Stretch="Uniform"
                      Visibility="Collapsed" />
                <Path x:Name="Mond"
                      Margin="4"
                      Data="{StaticResource DarkThemeIcon}"
                      Fill="{DynamicResource ForegroundBrush}"
                      Stretch="Uniform" />
            </Grid>
        </Button>


        <Label x:Name="Error"
               Margin="0,0,0,60"
               VerticalAlignment="Bottom"
               Background="#A0424242"
               Content="ajlfjkdsalfjösafjlsaöfj"
               Foreground="White"
               Visibility="Collapsed" />
    </Grid>
</Window>
