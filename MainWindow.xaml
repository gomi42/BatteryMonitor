<Window x:Class="BatteryMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BatteryMonitor"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:BatteryMonitor.Properties"
        Title="{x:Static p:Resources.WindowTitle}"
        Width="359"
        Height="588"
        Background="{DynamicResource WindowBackgroundBrush}"
        MinWidth="310"
        MinHeight="429"
        SnapsToDevicePixels="True"
        mc:Ignorable="d">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Button x:Name="ThemeBtn"
                Width="30"
                Height="27"
                Margin="0,1,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                BorderThickness="0"
                Click="ThemeButton_Click"
                Style="{DynamicResource TransparentButtonStyle}">
            <Grid>
                <Path x:Name="Sonne"
                      Margin="5"
                      Data="{StaticResource LightThemeIcon}"
                      Fill="{DynamicResource ForegroundBrush}"
                      Stretch="Uniform"
                      Visibility="Collapsed" />
                <Path x:Name="Mond"
                      Margin="5"
                      Data="{StaticResource DarkThemeIcon}"
                      Fill="{DynamicResource ForegroundBrush}"
                      Stretch="Uniform" />
            </Grid>
        </Button>

    <StackPanel Grid.IsSharedSizeScope="True" Margin="0,0,0,11">
        <DockPanel Margin="30,20,30,0">
            <Label HorizontalAlignment="Left"
                       FontWeight="Bold"
                       Content="{x:Static p:Resources.HeaderSystem}" />
            <Border Height="1"
                    Margin="3,0,0,5"
                    VerticalAlignment="Bottom"
                    Background="{StaticResource DimmedForegroundBrush}" />
        </DockPanel>

        <Grid Width="Auto"
              Margin="30,5,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                                  SharedSizeGroup="columnGroup" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
            <Label Grid.Row="0"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelCapacity}" />
            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="SystemCapacity"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label Grid.Row="0"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="%" />
            </StackPanel>
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelRemainingTime}" />
                <Label x:Name="RemainingSystemTime"
                       Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Content="--" />
                <Label Grid.Row="2"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelChargeState}" />
                <Label x:Name="SystemPowerState"
                       Grid.Row="2"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Content="--" />
            </Grid>

        <DockPanel Margin="30,20,30,0">
            <Label HorizontalAlignment="Left"
                       FontWeight="Bold"
                       Content="{x:Static p:Resources.HeaderBattery}" />
            <Border Height="1"
                    Margin="3,0,0,5"
                    VerticalAlignment="Bottom"
                    Background="{StaticResource DimmedForegroundBrush}" />
        </DockPanel>

        <Grid Width="Auto"
              Margin="30,5,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                                  SharedSizeGroup="columnGroup" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelBatteryName}" />
            <Label x:Name="DeviceName"
                       Grid.Row="0"
                       Grid.Column="1"
                       Style="{DynamicResource ValueStyle}"
                       Content="--" />

            <Label Grid.Row="1"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelManufacturer}" />
            <Label x:Name="Manufacture"
                       Grid.Row="1"
                       Grid.Column="1"
                       Style="{DynamicResource ValueStyle}"
                       Content="--" />

            <Label Grid.Row="2"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelChemistry}" />
            <Label x:Name="Chemistry"
                       Grid.Row="2"
                       Grid.Column="1"
                       Style="{DynamicResource ValueStyle}"
                       Content="--" />

            <Label Grid.Row="3"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelManufactureDate}" />
            <Label x:Name="ManufactureDate"
                       Grid.Row="3"
                       Grid.Column="1"
                       Style="{DynamicResource ValueStyle}"
                       Content="--" />

            <Label Grid.Row="4"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelPowerState}" />
            <Label x:Name="PowerState"
                       Grid.Row="4"
                       Grid.Column="1"
                       Style="{DynamicResource ValueStyle}"
                       Content="--" />

            <Label Grid.Row="5"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelDesignCapacity}" />
            <StackPanel Grid.Row="5"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="DesignedCapacity"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content=" mWh" />
            </StackPanel>
            <Label Grid.Row="6"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelFullChargedCapacity}" />
            <StackPanel Grid.Row="6"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="FullChargeCapacity"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content=" mWh" />
            </StackPanel>
            <Label Grid.Row="7"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelBatteryHealth}" />
            <StackPanel Grid.Row="7"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="BatteryHealth"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="%" />
            </StackPanel>
            <Label Grid.Row="8"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelCurrentCapacity}" />
            <StackPanel Grid.Row="8"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="CurrentCapacity"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content=" mWh" />
            </StackPanel>
            <Label Grid.Row="9"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelCurrentCapacity}" />
            <StackPanel Grid.Row="9"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="CurrentCapacityPercent"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="%" />
            </StackPanel>
            <Label Grid.Row="10"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelVoltage}" />
            <StackPanel Grid.Row="10"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="Voltage"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content=" V" />
            </StackPanel>
            <Label Grid.Row="11"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelRemainingTime}" />
            <Label x:Name="EstimatedTime"
                       Grid.Row="11"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Content="--" />
            <Label Grid.Row="12"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelRate}" />
            <StackPanel Grid.Row="12"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="Rate"
                           HorizontalAlignment="Left"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content=" mW" />
            </StackPanel>
            <Label Grid.Row="13"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelDefaultAlert1}" />
            <StackPanel Grid.Row="13"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="DefaultAlert1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content=" mWh" />
            </StackPanel>
            <Label Grid.Row="14"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelDefaultAlert2}" />
            <StackPanel Grid.Row="14"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="DefaultAlert2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content=" mWh" />
            </StackPanel>
            <Label Grid.Row="15"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelCriticalBias}" />
            <StackPanel Grid.Row="15"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="CriticalBias"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content=" mWh" />
            </StackPanel>
            <Label Grid.Row="16"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelCycleCount}" />
            <Label x:Name="CylceCount"
                       Grid.Row="16"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Content="--" />
            <Label Grid.Row="17"
                       Grid.Column="0"
                       Style="{DynamicResource DescriptionStyle}"
                       Content="{x:Static p:Resources.LabelTemperature}" />
            <StackPanel Grid.Row="17"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Label x:Name="Temperature"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="--" />
                <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="°" />
            </StackPanel>
        </Grid>

        <StackPanel Margin="21,40,0,0"
                    Orientation="Horizontal">
            <Button Width="85"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="Button_Click_Test1"
                    Content="1" />
            <Button Width="85"
                    Margin="12,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="Button_Click_Test2"
                    Content="2" />
        </StackPanel>
    </StackPanel>

        <Label x:Name="Error" VerticalAlignment="Bottom"
                   Margin="0,0,0,60"
                   Background="#A0424242"
                   Foreground="White"
                   Content="ajlfjkdsalfjösafjlsaöfj"
                   Visibility="Collapsed" />
    </Grid>
</Window>
